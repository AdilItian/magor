{
	"name": "magor-backend",
	"version": "1.0.0",
	"description": "Backend for magor 2020",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ccpandhare/magor-backend.git"
	},
	"scripts": {
		"start": "cross-env NODE_ENV=production pm2 start server.js",
		"mocha": "nyc mocha --timeout=5000 --exit",
		"test": "jest",
		"test:oh": "jest --runInBand --passWithNoTests",
		"coveralls": "jest --coverage && cat ./tests/coverage/lcov.info | coveralls",
		"dev": "cross-env NODE_ENV=development nodemon --ignore 'public/transcripts/*.json' server.js",
		"fresh": "npm run clean && npm run seed",
		"clean": "node clean.js",
		"seed": "node seed.js",
		"format": "prettier --write --config .prettierrc.json \"**/*.js\"",
		"lint": "eslint --fix --config .eslintrc.json \"**/*.js\"",
		"remark": "remark . -o"
	},
	"dependencies": {
		"@azure/storage-blob": "^12.4.1",
		"@google-cloud/translate": "^5.3.0",
		"axios": "^0.21.1",
		"bcrypt-nodejs": "0.0.3",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"date-fns": "^2.9.0",
		"dotenv-safe": "^8.2.0",
		"ejs": "^3.0.1",
		"expeditious-engine-redis": "^0.1.2",
		"express": "^4.17.1",
		"express-expeditious": "^5.1.1",
		"express-validator": "^6.4.0",
		"fluent-ffmpeg": "^2.1.2",
		"form-data": "^3.0.0",
		"get-video-duration": "^1.0.3",
		"helmet": "^3.21.2",
		"i18n": "^0.8.5",
		"jsonwebtoken": "^8.5.1",
		"mime-types": "^2.1.27",
		"mongoose": "^5.9.1",
		"mongoose-paginate-v2": "^1.3.6",
		"morgan": "^1.9.1",
		"multer": "^1.4.2",
		"nodejieba": "^2.4.1",
		"nodemailer": "^6.4.2",
		"nodemailer-mailgun-transport": "^2.0.0",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"remark-cli": "^7.0.1",
		"request-ip": "^2.1.3",
		"robust-dot-product": "^1.0.0",
		"shortid": "^2.2.16",
		"subtitle": "^2.0.3",
		"trim-request": "^1.0.6",
		"unzipper": "^0.10.11",
		"uuid": "^3.4.0",
		"validator": "^12.2.0",
		"websocket": "^1.0.31",
		"xml2js": "^0.4.23"
	},
	"devDependencies": {
		"@types/jest": "^26.0.20",
		"axios-mock-adapter": "^1.19.0",
		"cross-env": "^6.0.3",
		"eslint": "^6.8.0",
		"eslint-config-formidable": "^4.0.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-prettier": "^3.1.2",
		"faker": "^4.1.0",
		"jest": "^26.6.3",
		"mongo-seeding": "^3.3.0",
		"mongodb-memory-server": "^6.9.3",
		"nodemon": "^2.0.2",
		"nyc": "^15.0.0",
		"prettier": "^1.19.1",
		"prettier-eslint": "^9.0.1",
		"supertest": "^6.1.3"
	}
}
